<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/dashboard.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script src="/javascripts/main.js" defer></script>
  <script src="/javascripts/scroll.js" defer></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 0;
      background-color: #f4f4f4;
    }

    form div {
      margin-bottom: 15px;
    }
    label {
      margin-bottom: 5px;
      display: block;
      font-weight: bold;
    }
    input {
      padding: 8px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    button {
      padding: 10px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
    .message {
      color: red;
      text-align: center;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }
    .reservation-slot {
      cursor: pointer;
    }
    .reserved {
      background-color: #007bff;
      color: white;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Welcome, <%= user.username %></h1>
    <div class="date-picker">
      <label for="reservation-date">Select Date:</label>
      <input type="date" id="reservation-date" value="<%= new Date().toISOString().slice(0, 10) %>">
    </div>
    <div class="table-container">
      <button class="scroll-left">&lt;</button>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Time</th>
              <% profile.spaces.forEach(space => { %>
                <th><%= space.name %></th>
              <% }); %>
            </tr>
          </thead>
          <tbody>
            <% 
              const start = parseInt(profile.startTime.split(':')[0]);
              const end = parseInt(profile.endTime.split(':')[0]);
              for (let hour = start; hour <= end; hour++) { 
            %>
              <tr>
                <td><%= hour %>:00</td>
                <% profile.spaces.forEach(space => { %>
                  <td class="reservation-slot" data-space="<%= space.name %>" data-time="<%= hour %>:00"></td>
                <% }); %>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <button class="scroll-right">&gt;</button>
    </div>    
  </div>

  <script>
    document.querySelectorAll('.reservation-slot').forEach(slot => {
      slot.addEventListener('click', () => {
        const date = document.getElementById('reservation-date').value;
        const space = slot.getAttribute('data-space');
        const time = slot.getAttribute('data-time');
        
        Swal.fire({
          title: 'Reserve Space',
          html: `
            <form id="reservation-form">
              <label for="username">姓名:</label>
              <input type="text" id="username" name="username" required><br><br>
              <label for="purpose">標題:</label>
              <input type="text" id="purpose" name="purpose" required><br><br>
              <label for="startTime">開始時間:</label>
              <input type="time" id="startTime" name="startTime" required><br><br>
              <label for="endTime">結束時間:</label>
              <input type="time" id="endTime" name="endTime" required>
            </form>
          `,
          showCancelButton: true,
          confirmButtonText: '預約(Reserve)',
          preConfirm: () => {
            const username = document.getElementById('username').value;
            console.log('Username:', username); // 檢查 username 是否正確取得
            const purpose = document.getElementById('purpose').value;
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            if (!username || !purpose || !startTime || !endTime) {
              Swal.showValidationMessage('請檢查是否填寫完整');
            }
            return { username, purpose, startTime, endTime };
          }
        }).then(result => {
          if (result.isConfirmed) {
            const { username, purpose, startTime, endTime } = result.value;
            fetch('/reserve', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ date, space, startTime, endTime, username, purpose })
            })
            .then(response => response.json())
            .then(data => {
              if (data.success) {
                slot.classList.add('reserved');
                slot.innerHTML = `${username} (${purpose})<br>${startTime} - ${endTime}`;
                Swal.fire('Success', 'Reservation made successfully', 'success');
              } else {
                Swal.fire('Error', data.message, 'error');
              }
            });
          }
        });
      });
    });

    document.getElementById('reservation-date').addEventListener('change', (e) => {
      const date = e.target.value;
      fetch(`/reservations?date=${date}`)
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            document.querySelectorAll('.reservation-slot').forEach(slot => {
              const space = slot.getAttribute('data-space');
              const time = slot.getAttribute('data-time');
              const reservation = data.reservations.find(r => r.space === space && r.time === time);
              if (reservation) {
                slot.classList.add('reserved');
                slot.innerHTML = `${reservation.username} (${reservation.purpose})`;
              } else {
                slot.classList.remove('reserved');
                slot.innerHTML = '';
              }
            });
          }
        });
    });

    // 頁面加載後自動觸發日期變更事件
    document.getElementById('reservation-date').dispatchEvent(new Event('change'));
  </script>
</body>
</html>
