<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script src="/javascripts/main.js" defer></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 0;
      background-color: #f4f4f4;
    }

    form div {
      margin-bottom: 15px;
    }
    label {
      margin-bottom: 5px;
      display: block;
      font-weight: bold;
    }
    input {
      padding: 8px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    button {
      padding: 10px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
    .message {
      color: red;
      text-align: center;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Welcome, <%= user.username %></h1>
    <p>This is your dashboard.</p>
    <% if (profile) { %>
      <table>
        <thead>
          <tr>
            <th>Time</th>
            <% profile.spaces.forEach(space => { %>
              <th><%= space %></th>
            <% }); %>
          </tr>
        </thead>
        <tbody>
          <% 
            const [start, end] = profile.timeRange.split('-').map(time => parseInt(time.split(':')[0]));
            for (let hour = start; hour <= end; hour++) { 
          %>
            <tr>
              <td><%= hour %>:00</td>
              <% profile.spaces.forEach(space => { %>
                <td class="reservation-slot" data-space="<%= space %>" data-time="<%= hour %>:00"></td>
              <% }); %>
            </tr>
          <% } %>
        </tbody>
      </table>
    <% } else { %>
      <p>No profile data available. Please set up your profile first.</p>
    <% } %>
  </div>
  <footer>
    <p>Footer content here</p>
  </footer>
</body>
</html>
